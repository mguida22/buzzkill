{
  "manifest_version": 2,

  "name": "Buzzkill",
  "description": "Down with Buzzfeed! Remove all clickbait style articles",
  "version": "0.1.0",

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["jquery-1.11.3.min.js", "roundslider.min.js","fa-multi-button.min.js", "main.js", "dict.js", "popup.js"],
    "css": ["roundslider.min.css", "font-awesome.min.css"]
  }],

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Buzzkill"
  },

  "permissions": [
    "activeTab"
  ]
}
